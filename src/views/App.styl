html
  background-color #EEE

.App
  font-family Helvetica, Arial, sans-serif
  width 480px
  margin 50px auto
  display block
  background-color #FFF
  box-shadow 0px 1px 5px #BBB
  font-size 1.25em
  color #444
  line-height 1.5em

  h1
    text-align center
    background-color #d4423b
    color #FFF
    padding 20px 10px 15px 10px
    margin 0
    font-size 26px
    border-bottom 4px solid darken(#d4423b,30%)

  .content
    padding 30px
    min-width 300px